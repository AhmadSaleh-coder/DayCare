@model IEnumerable<Bundle>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Bundles List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Bundle" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add new Bundle
            </a>
        </div>
    </div>
    <br />
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Bundle Type
                </th>
                <th>
                    Price
                </th>
                <th>
                    Details
                </th>
                <th>
                    Time
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Type
                    </td>
                    <td width="30%">
                        @obj.Price
                    </td>
                    <td width="30%">
                        @obj.Details
                    </td>
                    <td width="30%">
                        @obj.TimeSpan_days
                    </td>
                    <td width="30%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Bundle" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>

                            <a asp-controller="Bundle" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
