@model Bundle
@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit School</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@

        <div class="mb-3">
            <label asp-for="Type"></label>
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Details"></label>
            <input asp-for="Details" class="form-control" />
            <span asp-validation-for="Details" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TimeSpan_days"></label>
            <input asp-for="TimeSpan_days" class="form-control" />
            <span asp-validation-for="TimeSpan_days" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Bundle" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
    </div>
</form>