@using DayCare.Models.ViewModels;
@model School
<form method="post">
    <input asp-for="Id" hidden />
    @*<input asp-for="OwnerId" hidden />*@

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit School</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        
       <div class="mb-3">
            <label asp-for="SchoolName"></label>
            <input asp-for="SchoolName" class="form-control" />
            <span asp-validation-for="SchoolName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="School" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
    </div>
</form>


