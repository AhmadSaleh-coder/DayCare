@using DayCare.Models.ViewModels;
@model School
<form method="post">
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete School</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        
       <div class="mb-3">
            <label asp-for="SchoolName"></label>
            <input asp-for="SchoolName" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="School" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
    </div>
</form>


