@using DayCare.Models.ViewModels;
@model SchoolVM
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add School</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" type="password"/>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
       <div class="mb-3">
            <label asp-for="School.SchoolName"></label>
            <input asp-for="School.SchoolName" class="form-control" />
            <span asp-validation-for="School.SchoolName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="School.PhoneNumber"></label>
            <input asp-for="School.PhoneNumber" class="form-control" />
            <span asp-validation-for="School.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="School.Address"></label>
            <input asp-for="School.Address" class="form-control" />
            <span asp-validation-for="School.Address" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="School" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
    </div>
</form>

