@using DayCare.Models;
@model IEnumerable<School>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Schools List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="School" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add new school
            </a>
        </div>
    </div>
    <br />
    <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                School Name
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Adress
            </th>
            <th>
                School Owner
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.SchoolName
                </td>
                <td width="30%">
                    @obj.PhoneNumber
                </td>
                <td width="30%">
                    @obj.Address
                </td>
               
                <td width="30%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="School" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                            Edit
                        </a>

                        <a asp-controller="School" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>
                            Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>