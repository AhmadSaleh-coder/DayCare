@model IEnumerable<User_School>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Teachers List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Teacher" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add new Teacher
            </a>
        </div>
    </div>
    <br />
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                
                <th>
                    Teacher Name
                </th>
                <th>
                    Teacher Email
                </th>
               
                
              
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                   
                    
                    <td width="30%">
                        @obj.ApplicationUser.FullName
                    </td>
                    <td width="30%">
                        @obj.ApplicationUser.Email
                    </td>

                   
                    <td width="30%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Teacher" asp-action="Edit" asp-route-id="@obj.ApplicationUser.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>

                            <a asp-controller="Teacher" asp-action="Delete" asp-route-id="@obj.ApplicationUser.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>