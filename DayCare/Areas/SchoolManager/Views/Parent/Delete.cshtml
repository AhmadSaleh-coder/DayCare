@using DayCare.Models.ViewModels;
@model ParentVM
<form method="post">

    <input asp-for="parentId" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Parent</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" disabled class="form-control" />
        </div>
  
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-area="SchoolManager" asp-controller="Parent" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
    </div>
</form>


