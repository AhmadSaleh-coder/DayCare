@model RegisterLink

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Parent</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="SendTo"></label>
            <input asp-for="SendTo" class="form-control" />
            <span asp-validation-for="SendTo" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-area="Parent" asp-controller="Parent" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
    </div>
</form>